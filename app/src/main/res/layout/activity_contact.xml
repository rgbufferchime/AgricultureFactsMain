<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@color/baseshade5"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bufferchime.agriculturefact.Contact">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/textView"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:fontFamily="@font/canaro_extra_bold"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Contact us" />
    <include
        android:id="@+id/navigation"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="178dp"
        app:srcCompat="@drawable/fb" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="264dp"
        app:srcCompat="@drawable/insta" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="187dp"
        android:fontFamily="@font/canaro_extra_bold"
        android:text="Like our facebook page"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="272dp"
        android:fontFamily="@font/canaro_extra_bold"
        android:text="Follow us on instagram"
        android:textSize="25dp" />


</RelativeLayout>
